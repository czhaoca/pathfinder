        {
          "name": "Change Password",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "const CryptoJS = require('crypto-js');",
                  "",
                  "const currentPassword = pm.environment.get('password');",
                  "const newPassword = 'new_secure_password';",
                  "const salt = CryptoJS.lib.WordArray.random(32).toString();",
                  "",
                  "const currentHash = CryptoJS.SHA256(currentPassword + salt).toString();",
                  "const newHash = CryptoJS.SHA256(newPassword + salt).toString();",
                  "",
                  "pm.variables.set('client_salt', salt);",
                  "pm.variables.set('current_password_hash', currentHash);",
                  "pm.variables.set('new_password_hash', newHash);"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"current_password_hash\": \"{{current_password_hash}}\",\n    \"new_password_hash\": \"{{new_password_hash}}\",\n    \"client_salt\": \"{{client_salt}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/profile/change-password",
              "host": ["{{base_url}}"],
              "path": ["profile", "change-password"]
            }
          }
        }
      ]

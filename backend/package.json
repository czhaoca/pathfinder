{
  "name": "pathfinder-backend",
  "version": "0.1.0-beta.1",
  "description": "Backend API and services for Pathfinder",
  "main": "src/api/server.js",
  "scripts": {
    "start": "node src/api/server.js",
    "dev": "NODE_ENV=development nodemon src/api/server.js",
    "prod": "NODE_ENV=production node src/api/server.js",
    "mcp:start": "node src/services/mcp-server.js",
    "mcp:dev": "NODE_ENV=development node src/services/mcp-server.js",
    "mcp:prod": "NODE_ENV=production node src/services/mcp-server.js",
    "db:setup": "node src/database/setup-database.js",
    "db:setup:dev": "NODE_ENV=development node src/database/setup-database.js",
    "db:setup:prod": "NODE_ENV=production node src/database/setup-database.js",
    "db:seed": "node src/database/seeds/seed-data.js",
    "db:seed:dev": "NODE_ENV=development node src/database/seeds/seed-data.js",
    "db:seed:prod": "NODE_ENV=production node src/database/seeds/seed-data.js",
    "db:health": "node src/utils/db-health-check.js",
    "db:test": "node src/utils/test-connections.js",
    "db:sync": "node src/utils/db-sync.js",
    "cpa:collect": "tsx src/services/cpa-data-collector/run-collection.ts",
    "cpa:collect:watch": "node-schedule src/services/cpa-data-collector/scheduled-collection.js",
    "test": "jest --config=tests/jest.config.js",
    "test:unit": "jest --config=tests/jest.config.js --testPathPattern=tests/unit",
    "test:integration": "TEST_TYPE=integration jest --config=tests/jest.config.js --testPathPattern=tests/integration",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui",
    "test:e2e:debug": "npx playwright test --debug",
    "test:auth": "jest --config=tests/jest.config.js tests/integration/auth.test.js",
    "test:rbac": "jest --config=tests/jest.config.js tests/integration/rbac.test.js",
    "test:security": "jest --config=tests/jest.config.js tests/integration/security.test.js",
    "test:compliance": "jest --config=tests/jest.config.js tests/integration/compliance.test.js",
    "test:performance": "jest --config=tests/jest.config.js tests/integration/performance.test.js",
    "test:audit": "jest --config=tests/jest.config.js tests/integration/audit-logging.test.js",
    "test:security-audit": "npm audit && jest --config=tests/jest.config.js tests/integration/security.test.js",
    "test:coverage": "jest --config=tests/jest.config.js --coverage --coverageReporters=text --coverageReporters=lcov --coverageReporters=html",
    "test:watch": "jest --config=tests/jest.config.js --watch",
    "test:ci": "jest --config=tests/jest.config.js --ci --coverage --maxWorkers=2",
    "pretest": "node tests/globalSetup.js",
    "posttest": "node tests/globalTeardown.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.2",
    "@types/dompurify": "^3.0.5",
    "bcrypt": "^6.0.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "docx": "^9.5.1",
    "dompurify": "^3.2.6",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "google-auth-library": "^10.2.1",
    "handlebars": "^4.7.8",
    "helmet": "^8.1.0",
    "ioredis": "^5.7.0",
    "joi": "^18.0.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "natural": "^8.1.0",
    "node-fetch": "^3.3.2",
    "node-schedule": "^2.1.1",
    "nodemailer": "^7.0.5",
    "oci-objectstorage": "^2.114.0",
    "oracledb": "^6.3.0",
    "pdf-parse": "^1.1.1",
    "pdfkit": "^0.17.1",
    "puppeteer": "^24.16.1",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "redis": "^5.8.0",
    "speakeasy": "^2.0.0",
    "ulid": "^3.0.1",
    "uuid": "^11.1.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "2": "^3.0.0",
    "@playwright/test": "^1.54.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.1",
    "@types/node-fetch": "^2.6.9",
    "eslint": "^9.33.0",
    "jest": "^30.0.5",
    "nodemon": "^3.0.2",
    "openai": "^5.12.2",
    "supertest": "^7.1.4",
    "tsx": "^4.7.0",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
